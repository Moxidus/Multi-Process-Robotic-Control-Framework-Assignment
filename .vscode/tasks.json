{
    "tasks": [
        {
            "label": "Build with Make",
            "type": "cppbuild",
            // "command": "C:/Tools/Compilers/C/msys64/usr/bin/make.exe",
            "command": "make",
            "args": [
                "-j8"      // optional: parallel build
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],    
    "version": "2.0.0"
}
